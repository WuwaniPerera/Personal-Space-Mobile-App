<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreForgotPassword">

    <TextView
        android:id="@+id/title_reset_password"
        android:layout_width="258dp"
        android:layout_height="56dp"
        android:layout_marginTop="120dp"
        android:text="@string/title_reset_password"
        android:textAlignment="center"
        android:textColor="@color/theme_teal"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="311dp"
        android:layout_height="243dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_reset_password"
        app:srcCompat="@drawable/ps2" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="280dp"
        android:layout_height="57dp"
        android:layout_marginBottom="192dp"
        android:text="@string/btn_reset"
        android:textColor="#FFFFFF"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/edtResetPass"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="268dp"
        android:ems="10"
        android:hint="Enter Your E-mail"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_reset_password" />

    <ImageView
        android:id="@+id/img_deco3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="197dp"
        android:layout_marginBottom="1dp"
        android:rotation="-5"
        app:layout_constraintBottom_toTopOf="@+id/title_reset_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/deco3" />

    <ImageView
        android:id="@+id/img_deco3.2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="300dp"
        android:rotation="176"
        android:rotationX="-13"
        android:rotationY="21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReset"
        app:srcCompat="@drawable/deco3" />

</androidx.constraintlayout.widget.ConstraintLayout>