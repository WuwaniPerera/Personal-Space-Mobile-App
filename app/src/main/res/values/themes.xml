<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADColored" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1D1128</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryVariant">#58376C</item>
        <item name="colorBackgroundFloating">#C50763</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <!-- Splashscreen -->

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- <item name="android:windowBackground">@drawable/splash_background</item> -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="android:colorBackground">#ad7ffb</item>

    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColorPrimary">#FF5722</item>
    </style>

</resources>